
<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">
    <!-- プロフィール＆投稿画面 -->
    <div class="col-lg-3">
        <div class="profile-container">
          <h2>User Info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>

           <table class="table tables-bordered">
            <tbody>
              <tr>
                <td>Name</td>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <td>Introduction</td>
                <td><%= @user.introduction %></td>
              </tr>
            </tbody>
           </table>
           <% if @user.id == current_user.id %>
            <%= link_to "", edit_user_path(@user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
          <% end %>
        </div>

        <div class="new_post-container">
          <h2>New Book</h2>
        <%= form_for(@book) do |f| %>
             <div class="field">
               <%= f.label :title %><br>
               <%= f.text_field :title, id: :book_title, class: 'col-xs-12' %>
             </div>
             <div class="field">
               <%= f.label :Opinion %><br>
               <%= f.text_area :body, id: :book_body, class: 'col-xs-12' %>
             </div>
             <div class="actions">
               <%= f.submit(class: 'btn btn-primary col-xs-12') %>
             </div>
        <% end %>
        </div>
    </div>
    <!-- ↑ここまで -->
    <div class="col-lg-9">
      <h2>Users</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
            <td><%= user.name %></td>


          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
